<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.HomeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Choose the file"

                android:textSize="20dp" />

            <Button
                android:id="@+id/btnBrowse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="left"
                android:text="Browse" />
        </RelativeLayout>

        <TextView
            android:id="@+id/importedContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Imported 123 contacts" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Available variables {firstname};{firstname}" />


        <EditText
            android:id="@+id/editMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="enter your text" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"

            android:layout_height="150dp"
            android:orientation="vertical"
            android:visibility="gone">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:checked="true"
                    android:text="Time" />

                <RadioButton
                    android:id="@+id/radioRandom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Random" />
            </RadioGroup>

            <EditText
                android:id="@+id/timeInSec"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:hint="time in sec"
                android:inputType="number" />

            <EditText
                android:id="@+id/to"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/timeInSec"
                android:layout_marginRight="20dp"
                android:hint="to"
                android:inputType="number" />

            <EditText
                android:id="@+id/from"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_below="@+id/timeInSec"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/to"
                android:hint="from"
                android:inputType="number" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="left"
            android:text="Send" />
    </LinearLayout>


</LinearLayout>